<%= render 'shared/header' %>

<div class='kijiichiran flex9'>記事一覧</div>
<div class="card flex9">
<% @articles.each do |article|  %>

    <div class="card-image">
      <figure class="image">
         <%=image_tag article.image.url%>
      </figure>
    </div>
      <div class="card-content">
        <div class="media">
          <div class="media-left">
          </div>
          <div class="media-content">
            <p class="title is-4">
            <%= article.title%>
            </p>
          </div>
        </div>
  
        <div class="content ">
          <%= article.text%>
          <a href="#">#css</a> <a href="#">#responsive</a>
          <br>
          <p class="post-created_at"><%= article.created_at%></p>
        </div>
      </div>
    </div>
<%end%>
